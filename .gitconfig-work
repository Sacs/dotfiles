[user]
	email = cbell@vixio.com
	name = Colin Bell

[init]
  defaultBranch = master

[alias]
  delete-merged-branches = "!f() { git checkout --quiet master && git branch --merged | grep --invert-match '\\*' | xargs -n 1 git branch --delete; git checkout --quiet @{-1}; }; f"
	list-remote-merged-branches = !sh -c 'git checkout master && git fetch && git branch -r --merged master | grep -v master | xargs -r -n 1 echo'
	delete-remote-merged-branches = !sh -c 'git checkout master && git fetch && git branch -r --merged master | grep -v master | xargs -r -t -n 1 git branch -d'
  fpull = !sh -c 'git fetch origin master && git reset --hard FETCH_HEAD && git clean -df'
